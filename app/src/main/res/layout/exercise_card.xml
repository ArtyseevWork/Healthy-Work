<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textAlignment="center"
    card_view:cardBackgroundColor="@color/grey_700"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/exercise_card_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/exercise_card_count"
            style="@style/general_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/base_margin"
            android:gravity="start|center_horizontal|center_vertical"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@+id/profit_card_date"
            app:layout_constraintStart_toEndOf="@+id/profit_card_name"
            app:layout_constraintTop_toTopOf="@+id/profit_card_name" />

        <TextView
            android:id="@+id/exercise_card_name"
            style="@style/general_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/base_margin"
            android:gravity="start|center_horizontal|center_vertical"
            android:layout_weight="50"
            android:text="@string/sample_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/exercise_card_enable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/base_margin"
            android:layout_weight="20"
            card_view:srcCompat="@drawable/ic_baseline_done_24"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>